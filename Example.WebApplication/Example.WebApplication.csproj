    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.5.1" />
    <PackageReference Include="Usa.Smart.AspNetCore" Version="1.3.1" />
    <PackageReference Include="Usa.Smart.Core" Version="1.7.3" />
  </ItemGroup>

